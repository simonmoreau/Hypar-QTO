{
    "$id": "https://bim42.com/qto-schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "A schema to get a building outline.",
    "type": "object",
    "required": [
        "data"
    ],
    "properties": {
        "data": {
            "type": "object",
            "description": "The data defining our building.",
            "$ref": "#/definitions/levels"
        }
    },
    "additionalProperties": false,
    "definitions": {
        "levels": {
            "type": "array",
            "description": "The list of levels in the buildings.",
            "items": {
                "type": "object",
                "$ref": "#/definitions/level"
            }
        },
        "level": {
            "type": "object",
            "description": "A building level.",
            "required": [
                "name",
                "elevation",
                "facades",
                "terraces"
            ],
            "properties": {
                "name": {
                    "type": "string",
                    "description": "The name of the level."
                },
                "elevation": {
                    "type": "number",
                    "description": "The elevation of the level from the ground level."
                },
                "facades": {
                    "type": "object",
                    "description": "Outlines of the fa√ßade on the level.",
                    "$ref": "#/definitions/outline"
                },
                "terraces": {
                    "type": "object",
                    "description": "Outlines of the terrases on the level.",
                    "$ref": "#/definitions/outline"
                }
            },
            "additionalProperties": false
        },
        "outline": {
            "type": "array",
            "description": "A list of lines representing the outline of a building feature.",
            "items": {
                "type": "object",
                "$ref": "#/definitions/line"
            }
        },
        "line": {
            "type": "object",
            "description": "A line.",
            "required": [
                "startPoint",
                "endPoint"
            ],
            "properties": {
                "startPoint": {
                    "type": "object",
                    "$ref": "#/definitions/vector3"
                },
                "endPoint": {
                    "type": "object",
                    "$ref": "#/definitions/vector3"
                }
            },
            "additionalProperties": false
        },
        "vector3": {
            "type": "object",
            "description": "A point or a vector.",
            "required": [
                "x",
                "y",
                "z"
            ],
            "properties": {
                "x": {
                    "type": "number"
                },
                "y": {
                    "type": "number"
                },
                "z": {
                    "type": "number"
                }
            },
            "additionalProperties": false
        }
    }
}